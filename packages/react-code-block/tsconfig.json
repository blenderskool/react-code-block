{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "dist",
    "declaration": true,
    "importHelpers": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
